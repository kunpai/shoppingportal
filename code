    System.out.println("4. 2013");
    System.out.println("5. 2012");
    System.out.println("6. 2011");
    System.out.println("7. 2010");
  
    int ychoice=sc.nextInt();
    switch(ychoice)
    {
        case 1:
        latestreleases();
        break;
        
        case 2:
        games2015();
        break;
        
        case 3:
        games2014();
        break;
        
        case 4:
        games2013();
        break;
        
        case 5:
        games2012();
        break;
        
        case 6:
        games2011();
        break;
        
        case 7:
        games2010();
        break;
                
        default: System.out.println("Wrong choice.... Please enter the number again....: ");
        ychoice=sc.nextInt();
        
    
}
}



