void latestreleases() 
{
    System.out.println("\f");
    System.out.println("LATEST RELEASES (2016): ");
     String releases2016[]=new String [10];
    String genre2016[]=new String [10];
    double cost2016[]=new double[10];
    int ctr2016=0;
    for (int i=0; i<year.length; i++)
    {
        if (year[i]==2016)
        {
            releases2016[ctr2016]=game[i];
            genre2016[ctr2016]=genre[i];
            cost2016[ctr2016]=cost[i];
            ctr2016++;
          
        }
    }
    
    for (int i=0; i<ctr2016; i++)
    {
        
        System.out.println((i+1)+ ". "+releases2016[i]);
        System.out.println("Year: 2016");
        System.out.println("Genre: " +genre2016[i]);
        System.out.println("Cost: " +cost2016[i]);     
    
}
System.out.print("Enter number you want to buy: ");
int h= sc.nextInt();

for (int i=0; i<ctr2016; i++)
{
    if (h==i+1)
    {
        System.out.println("\f");
        System.out.println("You are buying this... It will be entered to the bill...");
        System.out.println((i+1)+ ". "+releases2016[i]);
        System.out.println("Year: 2016");
        System.out.println("Genre: " +genre2016[i]);
        System.out.println("Cost: " +cost2016[i]);  
        System.out.println("Do you want to buy this item? (Y/N): ");
                    char choi=sc.next().charAt(0);
                     if (choi=='y'|| choi=='Y')
                     {
                        System.out.println("\f");
                         billitems[ctr1]=releases2016[i];
                        billcost[ctr2]=cost2016[i];
                        ctr1++;
                        ctr2++;
                        System.out.println("Thank you!");
                        System.out.println("Press 1 to generate the bill....");
                        
                        System.out.println("Press 2 to restart....");
                        int j=sc.nextInt();
                        if (j==1)
                        bill();
                        if (j==2)
                        {
                             System.out.println("\f");
                             choice();
                            }
                        break;
                     }
                    else if (choi=='n'||choi=='N')
                    {
                       System.out.println("\f");
                        System.out.println("Press 1 to restart from beginning");
                        System.out.println("Press 2 to restart Latest Releases menu");
                        int x=sc.nextInt();
                        if (x==1)
                        {
                            System.out.println("\f");
                            choice();
                        }
                        else if (x==2)
                        {
                            System.out.println("\f");
                        latestreleases();
                    }
                       else
                        {
                        System.out.print("Wrong number.... Enter again");
                        x=sc.nextInt();
                        break;
                    }
                }
            }
        }
    if (h>ctr2016)
    
    {
        System.out.println("Sorry! Wrong number entered....");
        System.out.println("Enter number again!");
        h=sc.nextInt();
    }
    
   
}

