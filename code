void creditcard()
{
 System.out.println("Enter Credit Card Number: ");
        String cc= sc.next();
        boolean valid=false;
        for (int i=0; i<cc.length(); i++)
        {
            char ch= cc.charAt(i);
            
            if (Character.isDigit(ch)==true && cc.length()==16)
            valid=true;
        }
        if (valid==true)
        {
            cvv();
                      
         }

        else
        {
        System.out.println("WRONG CREDIT CARD NUMBER");
        System.out.println("Press 1 to choose a different payment option....");
        System.out.println("Press any other number to enter Credit Card Number Again");
        String k= sc.next();
        if (Long.valueOf(k)==1)
        payment();
        else
        creditcard();
        
    }
}


void cvv()
{
System.out.println("Enter CVV: ");
            String cvv=sc.next();
             boolean validity=false;
        for (int i=0; i<cvv.length(); i++)
        {
            char CH= cvv.charAt(i);
            
            if (Character.isDigit(CH)==true && cvv.length()==3)
            validity=true;
        }
        
        if (validity==true)
        {
            System.out.println("Payment Received! Your order will be delivered at " +address);
        }
        else
        {
            System.out.println("Wrong CVV");
            System.out.println("Press 1 to choose a different payment option.....");
            System.out.println("Enter any other number to enter CVV again");
            String j= sc.next();
            if (Integer.valueOf(j)==1)
            payment();
            else
           cvv();
}
}

static void main()
{
    STEA_STORE obj= new STEA_STORE();
    obj.accept();
}



