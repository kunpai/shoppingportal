        for (int i=0; i<genre.length; i++)
        {
            if (genre[i].equalsIgnoreCase("First Person Shooter (FPS) ")||genre[i].equalsIgnoreCase(" First Person Shooter (FPS) ")|| genre[i].equalsIgnoreCase(" First Person Shooter (FPS)"))
            {
                fpsyear[ctrfps]=year[i];
                fpscost[ctrfps]=cost[i];
                fpsname[ctrfps]=game[i];
                ctrfps++; 
           }
        }
        System.out.println("\f");
        for (int i=0; i<ctrfps; i++)
        {
            System.out.println((i+1)+ ". " + fpsname[i]);
            System.out.println("Year: " +fpsyear[i]);
            System.out.println("Genre: First Person Shooter (FPS)");
            System.out.println("Cost: " +fpscost[i]);
        }
        System.out.println("Enter number to buy:");
        int l= sc.nextInt();
        
for (int i=0; i<ctrfps; i++)
{
    if (l==i+1)
    {
        System.out.println("\f");
        System.out.println((i+1)+ ". " + fpsname[i]);
            System.out.println("Year: " +fpsyear[i]);
            System.out.println("Genre: First Person Shooter (FPS) ");
            System.out.println("Cost: " +fpscost[i]);
        System.out.println("Do you want to buy this item? (Y/N): ");
                    char Ch=sc.next().charAt(0);
                     if (Ch=='y'|| Ch=='Y')
                     {
                        System.out.println("\f");
                         billitems[ctr1]=fpsname[i];
                        billcost[ctr2]=fpscost[i];
                        ctr1++;
                        ctr2++;
                        System.out.println("Thank you!");
                        System.out.println("Press 1 to generate the bill....");
                        
                        System.out.println("Press 2 to restart....");
                        int j=sc.nextInt();
                        if (j==1)
                        bill();
                        if (j==2)
                        {
                             System.out.println("\f");
                             choice();
                            }
                        break;
                     }
                    else if (Ch=='n'||Ch=='N')
                    {
                        System.out.println("Press 1 to restart from beginning");
                        System.out.println("Press 2 to restart Display by Genre menu");
                        int x=sc.nextInt();
                        if (x==1)
                        {
                            System.out.println("\f");
                            choice();
                        }
                        else if (x==2)
                        {
                            System.out.println("\f");
                        displaybygenre();
                    }
                       else
                        {
                        System.out.print("Wrong number.... Enter again");
                        x=sc.nextInt();
                        break;
                    }
                }
            }
            if (l>ctrfps)
    {
        System.out.println("Sorry! Wrong number entered....");
        System.out.println("Enter number again!");
        l=sc.nextInt();
    }
    }
    break;
default: System.out.println("Sorry! Wrong number! Enter number again: ");
gchoice=sc.nextInt();    
    
}
}



void bill()
{
    System.out.println("\f");
        System.out.println(" \t\t\t  _____   _______   ______              __  __ ");
        System.out.println("  \t\t\t / ____| |__   __| |  ____|     /\\     |  \\/  |");
        System.out.println("  \t\t\t | (___     | |    |  |__      /  \\    | \\  / |");
        System.out.println("  \t\t\t \\___ \\     | |    |  __|     / /\\ \\   | |\\/| |");
        System.out.println("  \t\t\t ____) |    | |    | |____   / ____ \\  | |  | |");
        System.out.println("\t\t\t|_____/     |_|    |______| /_/    \\_\\ |_|  |_|");
    
        double x=Math.random();
        String y=""+x;
        int h=y.indexOf('.');
        String receipt=y.substring(h+1,11);
        System.out.println("Receipt No.: " +receipt);
        System.out.print("Date: " +c.get(Calendar.DATE)+"/"+(c.get(Calendar.MONTH)+1)+"/"+c.get(Calendar.YEAR));
        System.out.println("\t\t\t\t\t\t\t\t\t\t\t\t Address: " +address);
        System.out.println("Name: " +name);
        System.out.println("**************************************************************************************************************");
         System.out.println("ITEM  \t\t\t\t\t\t\t\t\t\t\t\t            COST" );
         double sum=0;

    for (int i=0; i<ctr1; i++)
    {
        System.out.println(billitems[i] +"                                                                                               " +billcost[i]);
        sum+=billcost[i];
    }
    System.out.println("SUB-TOTAL:                                                                                               "+sum);
    System.out.println("VAT @12% :                                                                                               "+(0.12*sum));
    System.out.println("Service Charge @26%:                                                                                     "+(0.26*sum));
    System.out.println("Internet Handling Fees:                                                                                  "+40);
    System.out.println("TOTAL (ROUNDED):                                                                                         " + Math.rint((sum+(0.12*sum)+(0.26*sum)+40)));
    System.out.println("**************************************************************************************************************");
    
    payment();
    
}
    

void payment()
{
    System.out.println("Payment Option: ");
    System.out.println("1. Cash on Delivery");
    System.out.println("2. Credit Card");
    int g=sc.nextInt();
    
    if (g==1)
    {
    cod();
        }
    else if (g==2)
    {
       creditcard();
}
   

else
{
    System.out.print("Wrong Number enter again....: ");
    g=sc.nextInt();
}
  


  System.out.println("Press 1 to continue the program for second person: ");
    int z=sc.nextInt();
    
    if (z==1)
    {
        System.out.println("\f");
    accept();   
    
}
}

